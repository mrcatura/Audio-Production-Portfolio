{% block mainNavigation %}
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top justify-content-between">
    <a class="navbar-brand" href="{{ path('core_homepage') }}">Facet</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavMenu" aria-controls="mainNavMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNavMenu">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item {% if app.request.get('_route') == 'core_homepage' %}active{%  endif %}">
                <a class="nav-link" href="{{ path('core_homepage') }}">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">News</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Events</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Product Information</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Reference Material</a>
            </li>
        </ul>

        {# right user menu options #}
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="mainNavUserDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.user.displayName }}
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="mainNavUserDropdown">
                    <a class="dropdown-item {% if app.request.get('_route') == 'core_user_profile' %}active{%  endif %}" href="{{ path('core_user_profile') }}">Profile</a>
                    {% if is_granted('ROLE_ADMIN') or (app.user.isMemberOf('ACD Administrators'))  %}
                        <a class="dropdown-item {% if app.request.get('_route') == 'core_admin' %}active{%  endif %}" href="{{ path('core_admin') }}">Admin</a>
                    {% endif %}
                    <a class="dropdown-item" href="{{ path('security_logout') }}">Logout</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="mainNavUserToolsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Tools
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="mainNavUserToolsDropdown">
                    <a class="dropdown-item" href="#">People Operations</a>
                    <a class="dropdown-item" href="#">Headset</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
        </ul>
    </div>

</nav>

{% endblock %}